---
import Layout from "../../layouts/Layout.astro";
import PlotFigure from "../../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../../assets/penguins.json";

export function getStaticPaths() {

  const especes = [...new Set(penguins.map(p => p.species))];
  
  return especes.map(espece => {
    return {
      params: { species: espece }
    };
  });
}

const { species } = Astro.params;

const filteredData = penguins.filter(p => p.species === species);

const count = filteredData.length;
const avgMass = (filteredData.reduce((sum, p) => sum + (p.body_mass_g || 0), 0) / count).toFixed(0);
const avgFlipper = (filteredData.reduce((sum, p) => sum + (p.flipper_length_mm || 0), 0) / count).toFixed(1);

const plotOptions = {
  marks: [
    Plot.dot(filteredData, {
      x: "flipper_length_mm",
      y: "body_mass_g",
      fill: "island",
      r: 5,
      opacity: 0.7
    })
  ],
  grid: true,
  color: { legend: true },
  x: { label: "Longueur nageoire (mm)" },
  y: { label: "Masse corporelle (g)" }
};
---

<Layout title={`${species} - Rendu Statique`}>
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    
    <div class="mb-6">
      <a href="/rendu-statique" class="text-blue-600 hover:underline">Retour</a>
    </div>
    
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-2">
        Espèce: {species}
      </h1>
      <p class="text-gray-600 mb-6">
        <span class="font-semibold">{count}</span> penguins trouvés
      </p>
      
      <div class="grid grid-cols-2 gap-4 mb-8">
        <div class="bg-blue-50 rounded-lg p-4">
          <p class="text-sm text-gray-600">Individus</p>
          <p class="text-2xl font-bold text-blue-600">{count}</p>
        </div>

        <div class="bg-purple-50 rounded-lg p-4">
          <p class="text-sm text-gray-600">Masse moyenne</p>
          <p class="text-2xl font-bold text-purple-600">{avgMass} g</p>
        </div>
      </div>
      
      <div class="bg-gray-50 rounded-lg p-6">
        <PlotFigure options={plotOptions} />
      </div>
    </div>
    
  </div>
</Layout>
