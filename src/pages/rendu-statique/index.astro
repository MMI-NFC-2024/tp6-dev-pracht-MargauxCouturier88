---
import Layout from "../../layouts/Layout.astro";
import penguinsData from "../../assets/penguins.json";

const especes = [...new Set(penguinsData.map(p => p.species))];
---

<Layout title="Pingouins - Rendu Statique">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    
    <h1 class="text-4xl font-bold text-gray-800 mb-4">
      Rendu Statique - Liste des Espèces
    </h1>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4 text-gray-700">Espèces différentes :</h2>
      
      <ul class="space-y-3">
        {especes.map(espece => (
          <li>
            <a 
              href={`/rendu-statique/${espece}`}
              class="flex items-center p-4 bg-green-50 hover:bg-green-100 rounded-lg transition-colors"
            >
              <span class="text-2xl mr-3">🐧</span>
              <span class="text-lg font-medium text-green-700">Espèce: {espece}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
    
  </div>
</Layout>
