---
const currentPath = Astro.url.pathname;
---

<nav class="bg-purple-900 text-white py-4 mb-8">
  <div class="container mx-auto px-4 flex space-x-6">
    <a 
      href="/" 
      class={currentPath === '/' ? 'font-bold underline' : 'hover:underline'}
    >
      Accueil
    </a>
    
    <a 
      href="/rendu-dynamique" 
      class={currentPath.startsWith('/rendu-dynamique') ? 'font-bold underline' : 'hover:underline'}
    >
      Rendu Dynamique
    </a>
    
    <a 
      href="/rendu-statique" 
      class={currentPath.startsWith('/rendu-statique') ? 'font-bold underline' : 'hover:underline'}
    >
      Rendu Statique
    </a>
  </div>